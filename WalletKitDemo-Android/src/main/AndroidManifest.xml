<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.blockset.walletkit.demo">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.blockset.walletkit.demo.DemoApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.blockset.walletkit.demo.TransferCreateDelegateActivity"
            android:label="Create Delegation"/>
        <activity
            android:name="com.blockset.walletkit.demo.TransferCreateExportablePaperActivity"
            android:label="Exportable Paper Wallet"/>
        <activity
            android:name="com.blockset.walletkit.demo.TransferCreateSendActivity"
            android:label="Create Transfer"/>
        <activity
            android:name="com.blockset.walletkit.demo.TransferCreateSweepActivity"
            android:label="Create Sweep Transfer"/>
        <activity
            android:name="com.blockset.walletkit.demo.TransferCreatePaymentActivity"
            android:label="Create Payment Transfer"/>
        <activity
            android:name="com.blockset.walletkit.demo.TransferDetailsActivity"
            android:label="Transfer Details" />
        <activity
            android:name="com.blockset.walletkit.demo.TransferListActivity"
            android:label="Transfers" />
        <activity
            android:name="com.blockset.walletkit.demo.WalletListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
